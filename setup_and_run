#!/bin/bash
# =========================================
#  NIGHT CHECKER â€” Universal Setup & Run
# =========================================

echo "========================================="
echo "   ğŸŒ™ NIGHT CHECKER â€” Setup & Run"
echo "========================================="

# Move to the scriptâ€™s directory
cd "$(dirname "$0")"

# Detect OS
if [[ "$OSTYPE" == "darwin"* ]]; then
    OS="macOS"
    PYTHON_CMD="python3"
    ACTIVATE_CMD="source venv/bin/activate"
elif [[ "$OSTYPE" == "linux"* ]]; then
    OS="Linux"
    PYTHON_CMD="python3"
    ACTIVATE_CMD="source venv/bin/activate"
elif [[ "$OSTYPE" == "msys"* || "$OSTYPE" == "cygwin"* ]]; then
    OS="Windows"
    PYTHON_CMD="python"
    ACTIVATE_CMD="source venv/Scripts/activate"
else
    echo "âŒ Unsupported OS type: $OSTYPE"
    exit 1
fi

echo "ğŸ§© Detected system: $OS"
echo "Using Python command: $PYTHON_CMD"
echo "-----------------------------------------"

# Check Python
if ! command -v $PYTHON_CMD &> /dev/null
then
    echo "âŒ Python is not installed or not in PATH."
    echo "ğŸ‘‰ Please install Python from https://www.python.org/downloads/"
    exit 1
fi

# Create venv if not exists
if [ ! -d "venv" ]; then
    echo "ğŸ”§ Creating virtual environment..."
    $PYTHON_CMD -m venv venv
else
    echo "âœ… Virtual environment already exists."
fi

# Activate venv
echo "âš™ï¸ Activating virtual environment..."
eval "$ACTIVATE_CMD"

# Install dependencies if requirements.txt exists
if [ -f "requirements.txt" ]; then
    echo "ğŸ“¦ Installing dependencies from requirements.txt..."
    pip install -r requirements.txt
else
    echo "âš ï¸ No requirements.txt found â€” skipping package installation."
fi

# Run main.py if exists
if [ -f "main.py" ]; then
    echo "ğŸš€ Running main.py..."
    $PYTHON_CMD main.py
else
    echo "âŒ main.py not found in current directory!"
fi

echo "========================================="
echo "âœ… Completed! Exiting..."
echo "========================================="
